{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "specs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
